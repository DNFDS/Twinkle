<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/content"
        android:background="@color/colorBlue"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/edit_songlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:text="编辑歌单信息"
            android:textColor="@color/colorTabBg"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_below="@+id/content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/change_cover_btn_area"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_cover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="更换封面"
            android:textSize="20sp"
            android:textColor="@color/colorContent"/>

        <ImageView
            android:id="@+id/songlist_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/cover" />

        <ImageView
            android:id="@+id/pop_change_cover_line"
            android:layout_width="fill_parent"
            android:layout_below="@+id/songlist_cover"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/change_cover_title"
            android:layout_height="1dp"
            android:background="@color/colorGray"  />

        <TextView
            android:id="@+id/change_name_btn_area"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_cover_line"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_cover_line"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="名称"
            android:textSize="20sp"
            android:textColor="@color/colorContent"/>

        <TextView
            android:id="@+id/change_name_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pop_change_cover_line"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:text="temp"
            android:textSize="16sp"
            android:textColor="@color/colorContent"/>

        <ImageView
            android:id="@+id/pop_change_name_line"
            android:layout_width="fill_parent"
            android:layout_below="@+id/change_name_title"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@+id/change_cover_title"
            android:layout_height="1dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/change_tag_btn_area"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_name_line"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_name_line"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="标签"
            android:textSize="20sp"
            android:textColor="@color/colorContent"/>

        <TextView
            android:id="@+id/change_tag_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pop_change_name_line"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="17dp"
            android:text="请输入歌单标签"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pop_change_tag_line"
            android:layout_width="fill_parent"
            android:layout_below="@+id/change_tag_title"
            android:layout_alignStart="@+id/change_cover_title"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/change_description_btn_area"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_tag_line"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_change_tag_line"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="描述"
            android:textSize="20sp"
            android:textColor="@color/colorContent"/>

        <TextView
            android:id="@+id/change_description_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pop_change_tag_line"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="17dp"
            android:text="暂无描述"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pop_change_description_line"
            android:layout_width="fill_parent"
            android:layout_below="@+id/change_description_title"
            android:layout_alignStart="@+id/change_cover_title"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
    </RelativeLayout>
</RelativeLayout>
