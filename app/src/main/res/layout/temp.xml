            android:layout_height="127dp"
            android:src="@drawable/singer"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/recommend_songlist_title"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/recommend_songlist_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recommend_songlist_image1"
            android:layout_alignEnd="@+id/recommend_songlist_image1"
            android:layout_below="@+id/recommend_songlist_image1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="每日为你精选好歌"
            android:textSize="16sp"
            android:textColor="@color/colorContent"/>

        <TextView
