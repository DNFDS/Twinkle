<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/local_music" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="133dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/download" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="38dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/recent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="133dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/like" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="118dp"
        android:text="我的收藏"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="24dp"
        android:text="最近播放"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="134dp"
        android:text="下载"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="63dp"
        android:text="本地音乐"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="52dp"
        android:text="1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="148dp"
        android:text="0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="149dp"
        android:text="2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="90dp"
        android:text="6"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_height="5dp"
        android:background="#FAFAFA"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:text="创建的歌单"
        android:textColor="@color/colorContent"
        android:textSize="18sp" />

    <include
        layout="@layout/songlist_item"
        android:id="@+id/songlist_item1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textView9"  />
    <include
        layout="@layout/songlist_item"
        android:id="@+id/songlist_item2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/songlist_item1"  />
    <include
        layout="@layout/songlist_item"
        android:id="@+id/songlist_item3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/songlist_item2"  />
    <include
        layout="@layout/songlist_item"
        android:id="@+id/songlist_item4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/songlist_item3"  />

</RelativeLayout>