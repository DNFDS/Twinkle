<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
        android:textColor="#333"
        android:padding="8dp"
        android:id="@+id/popup_out"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="360dp" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/content"
        android:background="@drawable/rounded_corners_bg"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pop_download_btn_area"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_songlist_title_line"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/pop_songlist_title_line"
            android:layout_width="fill_parent"
            android:layout_below="@+id/pop_songlist_title"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/pop_songlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlack"
            android:text="添加到歌单"
            android:textSize="20sp"/>

        <ListView
            android:id="@+id/add_song_list_view"
            android:layout_below="@+id/pop_songlist_title_line"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@null"></ListView>
    </RelativeLayout>
</RelativeLayout>
