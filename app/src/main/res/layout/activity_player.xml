<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTheme">

        <ImageView
            android:id="@+id/return_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/return_player"/>


        <TextView
            android:id="@+id/title_Text"
            android:text="TITLE"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/share_player"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/cover_Image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:src="@drawable/cover_pop_star" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/progress_sb"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/star_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/play_btn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/star"/>

        <ImageView
            android:id="@+id/pre_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@id/play_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd = "35dp"
            android:src="@drawable/pre"
            />

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/play"/>

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@id/play_btn"
            android:src="@drawable/next" />

        <ImageView
            android:id="@+id/playingList_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/play_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/list"
            />

    </RelativeLayout>

</LinearLayout>